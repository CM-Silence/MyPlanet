<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:gravity="center">

    <ImageButton
        android:id="@+id/view_btn_myplanetshow_add"
        android:src="@drawable/drawable_add"
        android:scaleType="fitCenter"
        android:background="@drawable/selector_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="Add Planet"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/view_tv_myplanetshow_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/general_background_full"
        android:gravity="center"
        android:text="add planet"
        android:textColor="@color/black"
        tools:ignore="HardcodedText"/>

</LinearLayout>