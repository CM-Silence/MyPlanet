<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.example.myplanet.view.MyCircle
        android:id="@+id/view_mycircle_circle"
        android:layout_width="330dp"
        android:layout_height="330dp" />

    <ImageView
        android:id="@+id/view_iv_moon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/view_mycircle_circle"
        android:layout_alignTop="@+id/view_mycircle_circle"
        android:layout_alignEnd="@+id/view_mycircle_circle"
        android:layout_alignBottom="@+id/view_mycircle_circle"
        android:layout_marginStart="140dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="273dp"
        android:src="@drawable/drawable_moon" />


</RelativeLayout>